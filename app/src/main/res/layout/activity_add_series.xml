<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddSeriesActivity"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/movename"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="series name"
            android:textSize="25sp"></TextView>
        <EditText
            android:id="@+id/seriesname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></EditText>

    </LinearLayout>
    <LinearLayout


        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="series image link"
            android:textSize="25sp"></TextView>
        <EditText
            android:id="@+id/seriesimagelink"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></EditText>

    </LinearLayout>

    <LinearLayout


        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="series video link"
            android:textSize="25sp"></TextView>
        <EditText
            android:id="@+id/seriesvideolink"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></EditText>

    </LinearLayout>

    <LinearLayout

        android:id="@+id/movieimagelink"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Series Category"
            android:textSize="25sp"></TextView>

        <Spinner
            android:id="@+id/seriescategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></Spinner>

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button

            android:id="@+id/btmsave"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="Save"
            android:layout_margin="30dp"
            android:layout_weight="1"
            android:drawableLeft="@drawable/ic_save"
            android:drawableTint="@color/colorWhite"
            android:paddingLeft="5dp"
            android:textColor="@color/colorWhite"
            android:background="@drawable/btnsavebg"
            android:onClick="btnsaveSeries"/>

        <Button
            android:layout_margin="30dp"
            android:layout_weight="1"
            android:background="@drawable/btncancelbg"
            android:textColor="@color/colorWhite"
            android:drawableLeft="@drawable/ic_cancel"
            android:paddingLeft="5dp"
            android:onClick="btnCancelSeries"
            android:id="@+id/btncancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel" />

    </LinearLayout>


</LinearLayout>